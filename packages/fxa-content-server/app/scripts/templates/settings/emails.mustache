<div id="emails" class="settings-unit {{#isPanelOpen}}open{{/isPanelOpen}}">
    <div class="settings-unit-stub">
        <header class="settings-unit-summary">
            <h2 class="settings-unit-title">{{#t}}Secondary email{{/t}}</h2>
        </header>
        <button class="settings-button settings-unit-toggle {{buttonClass}}" data-href="/settings/emails">
            {{#hasSecondaryEmail}}{{#t}}Change…{{/t}}{{/hasSecondaryEmail}}
            {{^hasSecondaryEmail}}{{#t}}Add…{{/t}}{{/hasSecondaryEmail}}
        </button>
    </div>

    <div class="settings-unit-details">
        <form novalidate>
            <p>
                {{#t}}A secondary email is an additional address for receiving security notices and confirming new devices.{{/t}}
            </p>
            {{#showingSecondaryEmails}}
                <ul class="email-list button-row">
                    {{#emails}}
                        {{^isPrimary}}
                            <li class="email-address">
                                <div class="email-address-row">
                                    <div class="email-address-details">
                                        <div class="address {{#verified}}verified{{/verified}}">{{email}}</div>
                                        <div class="details {{#verified}}verified{{/verified}}{{^verified}}not-verified{{/verified}}">
                                            {{#verified}}
                                                <div>{{#t}}Verified{{/t}}</div>
                                            {{/verified}}
                                            {{^verified}}
                                                <div>{{#t}}Verification required{{/t}}</div>
                                            {{/verified}}
                                        </div>
                                    </div>
                                    <div class="settings-button-group">
                                        {{#verified}}
                                            <button class="settings-button secondary-button set-primary" data-id="{{email}}" title="{{#t}}Make primary{{/t}}">
                                                {{#t}}Make primary{{/t}}
                                            </button>
                                        {{/verified}}
                                        <button class="settings-button warning-button email-disconnect" data-id="{{email}}">
                                            {{#t}}Remove{{/t}}
                                        </button>
                                    </div>
                                </div>

                                <div class="email-options">
                                    <div class="settings-button-group">
                                        {{#verified}}
                                            <button class="settings-button secondary-button set-primary" data-id="{{email}}" title="{{#t}}Make primary{{/t}}">
                                                {{#t}}Make primary{{/t}}
                                            </button>
                                        {{/verified}}
                                        <button class="settings-button warning-button email-disconnect" data-id="{{email}}">
                                            {{#t}}Remove{{/t}}
                                        </button>
                                    </div>
                                </div>

                                {{^verified}}
                                    <a class="resend" data-id="{{email}}">{{#t}}Not in inbox or spam folder? Resend{{/t}}</a>
                                {{/verified}}
                            </li>
                        {{/isPrimary}}
                    {{/emails}}
                </ul>
            {{/showingSecondaryEmails}}

            {{^showingSecondaryEmails}}
                <div class="input-row">
                    <input type="email" class="new-email tooltip-below" placeholder="{{#t}}Secondary email{{/t}}"
                           value="{{newEmail}}" autofocus autocomplete="off"/>
                </div>
            {{/showingSecondaryEmails}}

            <div class="button-flex-row">
                {{#showingSecondaryEmails}}
                    <button type="submit" class="settings-button email-refresh primary-button enabled" title="{{ lastCheckedTime }}">{{#t}}Refresh{{/t}}</button>

                    {{#canAddAnotherEmail}}
                        <button class="settings-button email-add-another secondary-button">
                            {{#t}}Add email{{/t}}
                        </button>
                    {{/canAddAnotherEmail}}

                    <button
                        class="settings-button {{#hasSecondaryVerifiedEmail}}cancel secondary-button enabled{{/hasSecondaryVerifiedEmail}}
                            {{^hasSecondaryVerifiedEmail}} disabled {{/hasSecondaryVerifiedEmail}}">
                        {{#t}}Done{{/t}}
                    </button>
                {{/showingSecondaryEmails}}

                {{^showingSecondaryEmails}}
                    <button type="submit" class="settings-button email-add primary-button">{{#t}}Add{{/t}}</button>
                    <button
                        class="settings-button secondary-button enabled {{#addingAnotherEmail}}return-to-emails{{/addingAnotherEmail}}
                            {{^addingAnotherEmail}}cancel{{/addingAnotherEmail}}">
                        {{#t}}Cancel{{/t}}</button>
                {{/showingSecondaryEmails}}
            </div>
        </form>
    </div>
</div>
